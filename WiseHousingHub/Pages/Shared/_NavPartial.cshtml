@using Microsoft.AspNetCore.Identity
@using WiseHousingHub.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    if (User.IsInRole("admin"))
        {
            <li class="nav-item float-left">
                <a class="nav-link" asp-page="/AddProperty">Add Property</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-page="/AdminDashboard">Admin Dashboard</a>
            </li>
            
            
        }
        else
        {
            <li class="nav-item float-left">
                <a class="nav-link" asp-page="/AddProperty">Add Property</a>
            </li>
            var userId = UserManager.GetUserId(User);
            <li class="nav-item">
                <a class="nav-link" asp-page="/LandlordDashboard" asp-route-userId="@userId">Landlord Dashboard</a>
            </li>
            
        }
        
}
</ul>
